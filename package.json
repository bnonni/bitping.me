{
  "name": "bitping.me",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "pnpm db:generate && NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:migrate-dev-init": "prisma migrate dev --name init",
    "db:migrate-dev": "prisma migrate dev",
    "db:migrate-prod": "prisma migrate deploy",
    "do:deploy": "pnpm do:build && pnpm do:push",
    "do:build": "NODE_ENV=production docker build -t registry.digitalocean.com/${DO_REGISTRY_NAME}/bitping.me .",
    "do:push": "NODE_ENV=production docker push registry.digitalocean.com/${DO_REGISTRY_NAME}/bitping.me"
  },
  "dependencies": {
    "form-data": "^4.0.3",
    "mailgun.js": "^12.0.3",
    "next": "15.3.4",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-qr-code": "^2.0.16",
    "recharts": "^3.1.0",
    "@prisma/client": "^6.13.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.29.0",
    "@next/eslint-plugin-next": "^15.3.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-mocha": "^11.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "prisma": "^6.13.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
